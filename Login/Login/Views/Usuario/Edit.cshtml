@using Login.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Editar um Usuario";
}


<div class="text-center">
	<h1 class="display-4"> Editar o Usuario </h1>
</div>

<form asp-controller="Usuario" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
    <label for="Name" class="form-label">Nome</label>
    <input type="text" asp-for="Name" class="form-control" id="Inputnome" aria-describedby="nomeHelp" placeholder="Digite o nome do usuario">
    @Html.ValidationMessageFor(x => x.Name)
  </div>

  <div class="mb-3">
    <label for="pedidos" class="form-label">Email</label>
    <input type="text" asp-for="Email" class="form-control" id="InputPedidos">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

   <div class="mb-3">
    <label for="itens" class="form-label">Login</label>
    <input type="text" asp-for="Login" class="form-control" id="InputItens">
    @Html.ValidationMessageFor(x => x.Login)
  </div>

   <div class="mb-3">
    <label for="valor" class="form-label">Perfil</label>
    <select asp-for="Perfil" class="form-control" >
        <option value=""> Selecione </option>
        <option value="@PerfilEnum.Admin"> Administrador </option>
        <option value="@PerfilEnum.NoAdmin"> Padrão </option>
    </select>
    @Html.ValidationMessageFor(x => x.Perfil)
  </div>

  <button type="submit" class="btn btn-primary">Editar</button>
  <a class="btn alert-secondary" asp-controller="Usuario" asp-action="index">Voltar</a>
</form>